# ======================================
# API LIGA - Configuração de Produção
# ======================================

# Aplicação
NODE_ENV=production
PORT=3000

# Banco de Dados PostgreSQL (Produção)
DB_HOST=seu-servidor-postgres.com
DB_PORT=5432
DB_NAME=liga_db_prod
DB_USER=liga_admin
DB_PASSWORD=senha_super_segura_prod_aqui

# JWT Authentication
JWT_SECRET=chave_jwt_super_segura_troque_isso_em_producao_32_chars_min
JWT_EXPIRES_IN=7d

# Firebase Admin SDK
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json
FIREBASE_STORAGE_BUCKET=api-liga-prod.appspot.com

# CORS (opcional - especificar domínios permitidos)
ALLOWED_ORIGINS=https://liga.ao,https://www.liga.ao,https://app.liga.ao

# Rate Limiting (requisições por minuto)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Monitoring (opcional)
SENTRY_DSN=https://xxx@sentry.io/xxx
NEW_RELIC_LICENSE_KEY=xxx

# Email (opcional - para notificações)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@liga.ao
SMTP_PASSWORD=senha_email

# Redis (opcional - para cache)
REDIS_HOST=seu-servidor-redis.com
REDIS_PORT=6379
REDIS_PASSWORD=senha_redis_segura
